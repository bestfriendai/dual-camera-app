
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Identifier -->
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

	<!-- Bundle Name -->
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>

	<!-- Bundle Display Name -->
	<key>CFBundleDisplayName</key>
	<string>DualLens Pro</string>

	<!-- Bundle Executable -->
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>

	<!-- Issue #24 Fix: Background modes for continuous recording -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
	</array>

	<!-- Audio session configuration for background recording -->
	<key>AVInitialRouteSharingPolicy</key>
	<string>LongFormAudio</string>

	<!-- Scene manifest version -->
	<key>UIApplicationSceneManifestVersion</key>
	<string>2</string>

	<!-- Better permission descriptions - App Store compliant (specific and detailed) -->
	<key>NSCameraUsageDescription</key>
	<string>This app uses both front and back cameras simultaneously to record dual-perspective videos for your social media content.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>This app records audio along with video to create complete social media content.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>This app needs to save videos to your Photo Library.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app saves your recorded videos to your Photo Library.</string>

	<!-- Disable dark mode flicker during launch -->
	<key>UIUserInterfaceStyle</key>
	<string>Automatic</string>

	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>LaunchScreenBackground</string>
		<key>UIImageName</key>
		<string></string>
	</dict>
</dict>
</plist>
